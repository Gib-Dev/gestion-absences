generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String
  createdAt DateTime  @default(now())
}

model Absence {
  id        Int      @id @default(autoincrement())
  name      String   // Name of the person absent
  date      DateTime // Date of absence
  reason    String   // Reason for absence
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String
  createdAt DateTime  @default(now())
  absences  Absence[] // Relation avec les absences
}

model Absence {
  id        Int      @id @default(autoincrement())
  name      String   // Name of the person absent
  date      DateTime // Date of absence
  reason    String   // Reason for absence
  userId    Int      // ID de l'utilisateur qui a créé l'absence
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
